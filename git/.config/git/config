[core]
  editor = vim
  pager = less -FX
  ignoreCase = false
  excludesFile = ~/.config/git/ignore
[merge]
  conflictStyle = diff3
[push]
  default = simple
  autoSetupRemote = true
[diff]
  colorMoved = default
  colorMovedWS = allow-indentation-change
[alias]
  fix = commit --amend
  now = commit --amend --no-edit
  l = log --graph --date-order --all --abbrev-commit --date=iso --pretty=format:'%C(cyan)%ad %C(magenta)%h %C(green)%cn %C(white)%s %C(yellow)%d%Creset'
	clang-format = clang-format-12
[init]
  defaultBranch = main
[clangFormat]
	binary = clang-format-12
	style = file
[ghq]
  root = ~/Projects
  root = ~/go/src
  root = ~/src
