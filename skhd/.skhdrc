# changing window focus

# change window focus within space
cmd - j : yabai -m window --focus south
cmd - k : yabai -m window --focus north
cmd - h : yabai -m window --focus west
cmd - l : yabai -m window --focus east

# change focus between external displays
cmd - a : yabai -m display --focus west
cmd - s : yabai -m display --focus east

# increase window size
ctrl + cmd - j : yabai -m window --resize bottom:0:20
ctrl + cmd - k : yabai -m window --resize top:0:-20
ctrl + cmd - h : yabai -m window --resize left:-20:0
ctrl + cmd - l : yabai -m window --resize right:20:0

# modifying the layout

# rotate tree
shift + cmd - r : yabai -m space --rotate 90

# flip along y-axis
shift + cmd - y : yabai -m space --mirror y-axis

# flip along x-axis
shift + cmd - x : yabai -m space --mirror y-axis

# fullscreen
shift + cmd - f : yabai -m window --toggle zoom-fullscreen
